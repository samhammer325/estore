<div class="row">
 <div class="col s12 m10 offset-m1">    
   <h3 class="center">Products</h3>
   <table class="striped">
    <thead>
      <tr>
        <th>Name</th> 
        <th data-field="price">Price</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Color</th>
        <th>Weight</th>
        <th>Other</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody  class="striped" id="products_list">

    </tbody>
  </table>
  <br />
  <hr />
  <h3 class="center">Product Form</h3>
   <form id="create_product_form" action="/products" method="POST">
     <label for="product_name">Name:</label>
     <input type="text" id="product_name" name="product[name]" required />
     <br />

     <label for="product_base_price">Base Price:</label>
     <input type="text" id="product_base_price" name="product[base_price]" />
     <br />

     <label for="product_description">Description:</label>
     <input type="text" id="product_description" name="product[description]" />

     <label for="product_quanity_on_hand">Quanity On Hand:</label>
     <input type="number" id="product_quanity_on_hand" name="product[quanity_on_hand]" />

     <label for="product_color">Color:</label>
     <input type="text" id="product_color" name="product[color]" />

     <label for="product_weight">Weight:</label>
     <input type="number" id="product_weight" name="product[weight]" />

     <label for="product_other_attributes">Other:</label>
     <input type="text" id="product_other_attributes" name="product[other_attributes]" />

     <input type="submit" id="product_add_button" class="center" value="Add Product" />
     <input type="button" id="product_edit_button" class="hide center" value="Update Product" />
   </form>